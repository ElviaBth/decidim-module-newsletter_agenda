<style>
  table.container {
    background: <%= background_color %> !important;
    max-width: 816px !important;
    width: 100%;
    color: #ffffff !important;
  }

  table.container th, table.container td, table.container p, table.container .intro-link, .footer-box-link a {
    color: <%= font_color_over_bg %> !important;
  }

  table.container a {
    text-decoration: underline;
  }

  table.container th {
    padding-left: 0;
    padding-right: 0;
  }

  td.introduction, .middle, .footer {
    padding: 10% 10% 0 10%;
  }

  table.introduction, table.introduction td, table.introduction td p {
    color: #ffffff !important;
    padding: 20px 0;
  }

  td.agenda .top {
    background: <%= background_color %> url(<%= background_image_top %>) no-repeat center 100%;
  !important;
    color: #000000 !important;
    height: 387px;
  }

  td.agenda .bottom {
    background: <%= background_color %> url(<%= background_image_bottom %>) no-repeat center 100%;
  !important;
    color: #000000 !important;
    height: 387px;
  }

  table.agenda td, table.agenda p {
    background: #ffffff !important;
    color: #000000 !important;
  }

  td.footer {
  }

  .body-subtitle {
    color: <%= background_color %>;
    font-size: 36px;
  }

  .box {
    margin-bottom: 30px;
  }

  .body-box-title {
    font-size: 24px;
    font-weight: bold;
    margin: 10px 0;
    color: <%= background_color %>;
  }

  .box-image {
    margin-bottom: 20px;
  }

  .box-link {
    color: <%= background_color %> !important;
    margin-top: 20px;
  }

  .footer-title {
    margin: 5% auto;
    min-width: 70%;
    text-align: center;
  }

  .footer-box-title {
    font-size: 18px;
    font-weight: bold;
    margin: 10px 0;
  }

  .footer-social__icon .icon {
    width: 20px;
    height: 20px;
    margin: 0 5px;
    fill: <%= font_color_over_bg %>;
  }

  .footer-social {
    margin: 20px 0;
  }

  .footer-address {
    width: 50%;
  }

  .footer-address p {
    font-size: 90%;
  }

  .footer-bottom {
    width: 100%;
    margin: 10% 0;
  }

  .footer-social__wrap {
    text-align: right;
  }

  .footer-social {
    display: inline-block;
    vertical-align: middle;
  }

  @media only screen and (max-width: 600px) {
    td {
      display: block !important;
    }

    .top, .bottom {
      display: table-cell !important;
      vertical-align: middle !important;
    }

    .footer-bottom {
      display: block;
      text-align: center;
    }

    .footer-social__wrap {
      text-align: left;
    }

    .footer-address {
      display: block;
    }

    .footer-social__wrap {
      display: block;
    }

    .footer-social {
      display: block;
      text-align: center;
    }
  }
</style>

<table class="main container">
  <tr>
    <td class="introduction">
      <table class="introduction">
        <% if has_organization_logo? %>
          <tr>
            <td style="font-size:50px;line-height:30px;text-align:center;" colspan="2">
              <%= organization_logo %>
            </td>
          </tr>
        <% end %>
        <tr>
          <td style="font-size:30px;line-height:30px;" colspan="2">
            <%= intro_title %>
          </td>
        </tr>
        <% if has_main_image? %>
          <tr>
            <td>
              <table class="row content image">
                <tr>
                  <th class="small-12 first columns">
                    <%= main_image %>
                  </th>
                  <th class="expander"></th>
                </tr>
              </table>
            </td>
          </tr>
        <% end %>
        <tr>
          <td>
            <%= intro_text %>
            <%= link_to intro_link_text, intro_link_url, target: :blank, class: "intro-link" %>
          </td>
        </tr>
      </table>
    </td>
  </tr>
  <tr>
    <td class="agenda">
      <table class="agenda">
        <tr>
          <td class="top" style="vertical-align: middle;" colspan="2">
            <div style="text-align: center;margin: 60px 0 40px;padding: 5% 2% 0;">
              <%= body_title %>
            </div>
            <div class="body-subtitle" style="text-align: center;">
              <%= body_subtitle %>
            </div>
          </td>
        </tr>
        <tr>
          <td class="middle">
            <table cellpadding="0" cellspacing="0" border="0" align="center">
              <tr>
                <% (1..4).each_slice(2) do |boxes| %>
                <tr>
                  <% boxes.each do |box_number| %>
                    <td style="padding: 10px;">
                      <div class="box">
                        <div class="box-image">
                          <%= body_box_image(box_number) if has_body_box_image?(box_number) %>
                        </div>
                        <div class="box_date_time">
                          <%= body_box_date_time(box_number) %>
                        </div>
                        <div class="body-box-title">
                          <%= body_box_title(box_number) %>
                        </div>
                        <div class="box-text">
                          <%= body_box_description(box_number) %>
                        </div>
                        <div class="box-link">
                          <%= link_to body_box_link_text(box_number), body_box_link_url(box_number), target: :blank, class: "box-link" %>
                        </div>
                      </div>
                    </td>
                  <% end %>
                </tr>
              <% end %>
              </tr>
            </table>
          </td>
        </tr>
        <tr style="text-align: center;vertical-align: middle;">
          <td class="bottom" style="text-align: center;vertical-align: middle;">
            <%= body_final_text %>
          </td>
        </tr>
      </table>
    </td>
  </tr>
  <tr>
    <td class="footer">
      <table>
        <tr>
          <h3 class="footer-title"><%= footer_title %></h3>
        </tr>
      </table>
      <table cellpadding="0" cellspacing="0" border="0" align="center">
        <tr>
          <% (1..3).each do |box_number| %>
            <td style="padding: 10px;">
              <div class="box">
                <div class="box-image">
                  <%= footer_box_image(box_number) if has_footer_box_image?(box_number) %>
                </div>
                <div class="footer-box-date-time">
                  <%= footer_box_date_time(box_number) %>
                </div>
                <div class="footer-box-title">
                  <%= footer_box_title(box_number) %>
                </div>
                <div class="footer-box-link">
                  <%= link_to footer_box_link_text(box_number), footer_box_link_url(box_number), target: :blank %>
                </div>
              </div>
            </td>
          <% end %>
        </tr>
      </table>
      <table>
        <tr class="footer-bottom">
          <td class="footer-address">
            <%= footer_address_text.html_safe %>
          </td>
          <td class="footer-social__wrap">
            <%= footer_social_links_title %>
            <div class="footer-social">
              <%= social_links.join.html_safe %>
            </div>
          </td>
        </tr>
      </table>
      <% if has_footer_image? %>
        <table class="footer-logo" , style="margin: 5% 0;">
          <tr>
            <td class="footer-bottom">
              <%= footer_image %>
            </td>
          </tr>
        </table>
      <% end %>
    </td>
  </tr>
</table>
